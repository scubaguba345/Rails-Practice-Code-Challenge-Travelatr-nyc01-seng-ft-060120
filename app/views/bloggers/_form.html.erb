<% if flash[:my_errors]%>
    <% flash[:my_errors].each do |error|%>
    <%=error%>
<%end%>
<%end%>



<%= form_for @blogger do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :bio%>
    <%= f.text_field :bio%>

    <%= f.label :age%>
    <%= f.text_field :age%>

    <%= f.submit%>
<%end%>